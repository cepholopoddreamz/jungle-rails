<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <br>
          <dt>Reviews</dt>
          <dd><% product1 = Product.first %>
          <%product1.reviews.each do |order| %>
            <i>User:</i> <%= order.user.first_name%> <%= order.user.last_name%><br>
            <i>Details:</i> <%= order.description%><br>
            <i>Rating:</i> <%= order.rating%><br>
            <br>
        <% end %></dd>
       

        </dl>
      </div>
    </div>
   
  </article>â‰¤

</section>


