<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>
  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <br>
          <dt>Post Review</dt>
          <dd>

          <% if @current_user %>
            <%= form_for [@product, @review] do |f| %>
            Comment : <%= f.text_area :description, class: 'form-control' %><br />
            Rating :  <%= f.select :rating, ['1/5', '2/5', '3/5', '4/5', '5/5'] %>
            <%= f.submit %>
            <% end %>
            <% end %>
          </dd>
          <br>
          <dt>Reviews</dt>
          <dd> <%= render @reviews %></dd>
        </dl>
      </div>
    </div>
  </article>
</section>


